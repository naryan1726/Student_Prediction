import pandas as pd

def read_excel_data(file_path):
    """
    Read an Excel file and extract data from the sheet named 'Data',
    starting from the 4th row
    
    Parameters:
    file_path (str): Path to the Excel file
    
    Returns:
    pandas.DataFrame: Data from the sheet named 'Data' starting from row 4
    """
    try:
        # Read the Excel file, specifically the sheet named 'Data'
        # skiprows=3 means we skip the first 3 rows (0-indexed)
        df = pd.read_excel(file_path, sheet_name='Data', skiprows=3)
        
        # Return the dataframe containing the data
        return df
        
    except FileNotFoundError:
        print(f"Error: The file '{file_path}' was not found.")
        return None
    except ValueError:
        print(f"Error: No sheet named 'Data' was found in the file.")
        return None
    except Exception as e:
        print(f"An error occurred: {str(e)}")
        return None

# Example usage
if __name__ == "__main__":
    # Replace 'your_excel_file.xlsx' with your actual file path
    file_path = 'your_excel_file.xlsx'
    
    # Read the data starting from the 4th row
    data = read_excel_data(file_path)
    
    # If data was successfully read, display it
    if data is not None:
        print("Successfully read data from 'Data' sheet starting from row 4:")
        print(data.head())  # Display first few rows
        
        # Example: Accessing specific columns
        # print(data['Column_Name'])
        
